<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <!--<android.support.v7.preference.SwitchPreferenceCompat />-->

    <PreferenceCategory android:title="Cargo">

        <EditTextPreference
            android:id="@+id/txt_CargoL0"
            android:inputType="numberDecimal"
            android:defaultValue="1.0"
            android:key="prefCargo_L0"
            android:summary="Multiplier for Cargo scored in Lower Hub"
            android:title="Lower" />
        <EditTextPreference
            android:id="@+id/txt_CargoL1"
            android:inputType="numberDecimal"
            android:defaultValue="3.0"
            android:key="prefCargo_L1"
            android:summary="Multiplier for Cargo scored in Upper Hub"
            android:title="Upper" />
        <EditTextPreference
            android:id="@+id/txt_CargoC0"
            android:inputType="numberDecimal"
            android:defaultValue="1.5"
            android:key="prefCargo_C0"
            android:summary="Multiplier for Cargo collected from Floor"
            android:title="Floor" />
        <EditTextPreference
            android:id="@+id/txt_CargoC1"
            android:inputType="numberDecimal"
            android:defaultValue="1.0"
            android:key="prefCargo_C1"
            android:summary="Multiplier for Cargo collected From Terminal"
            android:title="Terminal" />

    </PreferenceCategory>

//================================================================================
    <PreferenceCategory android:title="Climb">
        <EditTextPreference
            android:id="@+id/txt_climb"
            android:inputType="numberDecimal"
            android:defaultValue="1.0"
            android:key="prefClimb_climb"
            android:summary="Multiplier for Climbing successfully"
            android:title="Climb" />

        <EditTextPreference
            android:id="@+id/txt_Hang0"
            android:inputType="numberDecimal"
            android:defaultValue="-2.0"
            android:key="prefClimb_Hang0"
            android:summary="Multiplier for Hang 'None'"
            android:title="Hang 0" />
        <EditTextPreference
            android:id="@+id/txt_Hang1"
            android:inputType="numberDecimal"
            android:defaultValue="1.0"
            android:key="prefClimb_Hang1"
            android:summary="Multiplier for Hang 'Low'"
            android:title="Hang 1" />
        <EditTextPreference
            android:id="@+id/txt_Hang2"
            android:inputType="numberDecimal"
            android:defaultValue="2.5"
            android:key="prefClimb_Hang2"
            android:summary="Multiplier for Hang 'Mid'"
            android:title="Hang 2" />
        <EditTextPreference
            android:id="@+id/txt_Hang3"
            android:inputType="numberDecimal"
            android:defaultValue="5.0"
            android:key="prefClimb_Hang3"
            android:summary="Multiplier for Hang 'High'"
            android:title="Hang 3" />
        <EditTextPreference
            android:id="@+id/txt_Hang4"
            android:inputType="numberDecimal"
            android:defaultValue="7.0"
            android:key="prefClimb_Hang4"
            android:summary="Multiplier for Hang 'Traversal'"
            android:title="Hang 4" />

    </PreferenceCategory>

//================================================================================
    <PreferenceCategory android:title="Combined">
        <EditTextPreference
            android:id="@+id/txt_ClimbWt"
            android:inputType="number"
            android:defaultValue="3.0"
            android:key="prefWeight_climb"
            android:summary="Multiplier for Climbing Score"
            android:title="Climb Weight" />
        <EditTextPreference
            android:id="@+id/txt_CargoWt"
            android:inputType="number"
            android:defaultValue="2.0"
            android:key="prefWeight_Cargo"
            android:summary="Multiplier for Cargo Score"
            android:title="Cargo Weight" />
        <EditTextPreference
            android:id="@+id/txt_Penalty"
            android:inputType="number"
            android:defaultValue="-1.5"
            android:key="prefWeight_Penalty"
            android:summary="Multiplier for Penalties"
            android:title="Penalty Weight" />
        <EditTextPreference
            android:id="@+id/txt_Lost"
            android:inputType="number"
            android:defaultValue="-2.5"
            android:key="prefWeight_Comms"
            android:summary="Multiplier for Lost Comms"
            android:title="Lost Comms Weight" />

    </PreferenceCategory>

    //================================================================================
    <PreferenceCategory android:title="Alliance Picks">
    <EditTextPreference
        android:id="@+id/txt_Picks"
        android:inputType="number"
        android:defaultValue="24"
        android:key="prefAlliance_num"
        android:summary="Number of Teams to print out for Alliance Picks"
        android:title="# Teams" />
    </PreferenceCategory>

</PreferenceScreen>

